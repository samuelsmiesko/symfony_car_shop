        <h6><span><a href="{{ path('blog') }}">Home</a> | <a href="{{ path('pagePick',{page: loop.index})}}">Page</a> |
                <a href="{{ path('blogPick',{id: loop.index})}}">Blog</a> | </span></h6>
    </div>
    {% endif %}
    {% set no = no + 1 %}
