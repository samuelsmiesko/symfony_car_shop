            <div class="d-flex mt-5 justify-content-center ">
                <ul class="pagination">
                    <li class="page-item "><a id="1" class="page-link paginationTag  loadpage" href="{{ path('pagePick',{page: 1})}}">First</a></li>
                    <li class="page-item "><a id="1" class="page-link paginationTag  loadpage" href="#"><</a></li>
                    {% set break = 0 %}

                    {% for key in lists %}
                        {% set lastElement = loop.length %}
                        {% set foo = loop.length / 5 %}
                            {% if break == 0 %}
                            
                            <li class="page-item"><a id="{{loop.index}}" href="{{ path('pagePick',{page: loop.index})}}"
                                    class="page-link paginationTag  loadpage" href="#">{{loop.index}}</a></li>
                            {% endif %}
                            {% if loop.index == 5 and break == 0 %}
                            <li class="page-item "><a id="2" class="page-link paginationTag  loadpage" href="#">></a></li>
                            <li class="page-item"><a id="{{loop.length}}" class="page-link paginationTag  loadpage" href="{{ path('pagePick',{page: loop.length})}}">last
                                    
                                    page</a>
                                    </li>
                            {% set break = 1 %}
                                
                            {% endif %}
                    {% endfor %}
