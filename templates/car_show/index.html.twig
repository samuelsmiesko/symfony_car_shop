{% extends 'base.html.twig' %}

{% block title %}Hello CarShowController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    ul {
        list-style-type: none;
    }



    .box:hover {
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 3px 15px 0 rgba(0, 0, 0, 0.19);
        transition: box-shadow 0.3s ease-in-out;
    }

    .bi-floppy2-fill:hover {
        fill: Indigo;
        transition: fill 0.5s ease-in-out;
    }

    .saved {
        fill: #FFD700;
        transition: fill 0.3s ease-in-out;
        filter: drop-shadow(0px 0px 2px rgb(0 0 0 / 0.4));
    }

    li {
        border: none !important;
    }

    img {
        object-fit: cover;
        width: 100%;

    }

    .list-group-item {
        padding: 3px;
        padding-left: 35px;
    }
</style>

<div class="example-wrapper">

    {% set no = 1 %}
    {% for  post in posts %}
    {% if no == 1 %}
