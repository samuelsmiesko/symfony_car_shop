      </div>
    </div>


  </div>
  {% endfor %}

  <!-- Container for the image gallery -->
  <div class="container">
    {% for listOfItem in listOfItems %}
    <!-- Full-width images with number text -->
    <div class="mySlides ">
      <div class="numbertext">{{ loop.index }} / {{ loop.length }}</div>
      <img src="{{asset(listOfItem.image)}}" class="" style="width:100%; display: block; 
 margin-left: auto; margin-right: auto;">
    </div>



    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>



    {% endfor %}
    <div id="roller" class="row mt-5" style="overflow-x: scroll;">
      <div class="d-flex justify-content-center">
        {% for listOfItem in listOfItems %}


        <img class="demo cursor m-1" src="{{asset(listOfItem.image)}}" style="height:150px;"
          onclick="currentSlide({{ loop.index }})">

        {% endfor %}
      </div>
    </div>
